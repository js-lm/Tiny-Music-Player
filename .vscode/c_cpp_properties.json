                "${workspaceFolder}/sources/**",
                "${workspaceFolder}/build/_deps/raylib-src/src",
                "${workspaceFolder}/build/_deps/magic_enum-src/include/magic_enum",
                "${workspaceFolder}/build/_deps/imgui-src",
                "${workspaceFolder}/build/_deps/rlimgui-src",
                "${workspaceFolder}/build/_deps/taglib-src",
                "${workspaceFolder}/resources"
